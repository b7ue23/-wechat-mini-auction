/* pages/detail/detail.wxss */
/* 详情页样式 */  
.container {  
    padding: 16rpx;  
    background-color: #f5f5f5;  
  }  
  
  .item-img {  
    width: 100%;  
    height: 400rpx;  
    object-fit: cover;  
    border-radius: 16rpx;  
  }  
  
  .item-info {  
    margin: 20rpx 0;  
    background-color: white;  
    padding: 16rpx;  
    border-radius: 16rpx;  
  }  
  
  .title {  
    font-size: 36rpx;  
    font-weight: bold;  
    display: block;  
    margin-bottom: 10rpx;  
  }  
  
  .desc {  
    font-size: 28rpx;  
    color: #666;  
    display: block;  
    margin-bottom: 10rpx;  
  }  
  
  .price {  
    font-size: 32rpx;  
    color: #ff4d4f;  
    display: block;  
    margin-bottom: 10rpx;  
  }  
  
  .time {  
    font-size: 28rpx;  
    color: #999;  
  }  
  
  .bid-area {  
    display: flex;  
    gap: 16rpx;  
    margin: 20rpx 0;  
  }  
  
  .bid-input {  
    flex: 1;  
    height: 80rpx;  
    border: 1rpx solid #ddd;  
    border-radius: 8rpx;  
    padding: 0 16rpx;  
  }  
  
  .bid-btn {  
    width: 200rpx;  
    background-color: #1677ff;  
    color: white;  
  }  
  
  .bid-history {  
    margin-top: 30rpx;  
    background-color: white;  
    padding: 16rpx;  
    border-radius: 16rpx;  
  }  
  
  .history-title {  
    font-size: 32rpx;  
    font-weight: bold;  
    display: block;  
    margin-bottom: 10rpx;  
  }  
  
  .history-item {  
    font-size: 28rpx;  
    padding: 8rpx 0;  
    border-bottom: 1rpx solid #eee;  
  }  