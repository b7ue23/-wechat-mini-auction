/* 首页样式 */  
.container {  
    padding: 16rpx;  
    background-color: #f5f5f5;  
    min-height: 100vh;  
  }  
  
  .title {  
    font-size: 36rpx;  
    font-weight: bold;  
    margin: 20rpx 0;  
  }  
  
  .item-list {  
    display: flex;  
    flex-direction: column;  
    gap: 16rpx;  
  }  
  
  .item {  
    display: flex;  
    background-color: white;  
    border-radius: 16rpx;  
    padding: 16rpx;  
    align-items: center;  
  }  
  
  .item-img {  
    width: 160rpx;  
    height: 160rpx;  
    border-radius: 8rpx;  
    object-fit: cover;  
  }  
  
  .item-info {  
    margin-left: 16rpx;  
    flex: 1;  
  }  
  
  .item-title {  
    font-size: 32rpx;  
    display: block;  
    margin-bottom: 8rpx;  
  }  
  
  .item-price {  
    font-size: 28rpx;  
    color: #ff4d4f;  
    display: block;  
    margin-bottom: 8rpx;  
  }  
  
  .item-time {  
    font-size: 24rpx;  
    color: #999;  
  }  
  
  .publish-btn {  
    position: fixed;  
    bottom: 30rpx;  
    right: 30rpx;  
    width: 80rpx;  
    height: 80rpx;  
    border-radius: 50%;  
    line-height: 80rpx;  
    background-color: #1677ff;  
    color: white;  
    font-size: 50rpx;  
    padding: 0;  
  }  