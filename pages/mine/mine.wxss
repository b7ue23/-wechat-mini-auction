.container {
    padding: 20rpx;
    background-color: #f8f8f8;
    min-height: 100vh;
  }
  
  /* 用户信息卡片 */
  .user-info-card {
    background-color: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx 20rpx;
    margin: 20rpx 0;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .avatar-container {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 20rpx;
    border: 2rpx solid #e6e6e6;
  }
  
  .avatar {
    width: 100%;
    height: 100%;
  }
  
  .nickname {
    font-size: 32rpx;
    color: #333333;
    font-weight: 500;
  }
  
  /* 列表区域 */
  .mine-section {
    margin-top: 30rpx;
    background-color: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .section-title {
    font-size: 28rpx;
    color: #333333;
    font-weight: 500;
  }
  
  .section-status {
    font-size: 24rpx;
    color: #999999;
  }
  
  .status-text.error {
    color: #ff4500;
    text-decoration: underline;
  }
  
  .status-text.empty {
    color: #999999;
  }
  
  .item-list {
    padding: 0 20rpx;
  }
  
  .item-card {
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .item-card:last-child {
    border-bottom: none;
  }
  
  .item-info {
    display: flex;
    flex-direction: column;
  }
  
  .item-title {
    font-size: 28rpx;
    color: #333333;
    margin-bottom: 10rpx;
    max-width: 450rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .item-price {
    font-size: 26rpx;
    color: #ff4500;
    font-weight: 500;
  }
  
  .item-time {
    font-size: 24rpx;
    color: #999999;
  }
  
  .item-status {
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 16rpx;
  }
  
  .status-ongoing {
    color: #10aeff;
    background-color: #e6f7ff;
  }
  
  .status-closed {
    color: #999999;
    background-color: #f5f5f5;
  }    